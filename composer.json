{
    "name": "avtonom/email-template-bundle",
    "type": "symfony-bundle",
    "description": "This bundle allow you to manage some HTML email templates stored in your database. Templates are written with Twig.",
    "keywords": ["Symfony2", "bundle", "mail", "mailer", "email", "email template"],
    "homepage": "https://github.com/Avtonom/EmailTemplateBundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Laurent Heurtault",
            "email": "l.heurtault@lexik.fr"
        },
        {
            "name": "Yoann Aparici",
            "email": "y.aparici@lexik.fr"
        },
        {
            "name": "Dev Lexik",
            "email": "dev@lexik.fr"
        }
    ],
    "require": {
        "php": ">=5.3.2",
        "symfony/framework-bundle": "~2.3",
        "swiftmailer/swiftmailer": ">=4.1.3,~5.0",
        "doctrine/orm": "~2.2",
        "twig/twig": "~1.3"
    },
    "autoload":     {
        "psr-0": { "Lexik\\Bundle\\MailerBundle": "" }
    },
    "target-dir": "Lexik/Bundle/MailerBundle",
    "extra": {
        "branch-alias": {
            "dev-master": "1.3.x-dev"
        }
    }
}
